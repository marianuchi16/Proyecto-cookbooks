    end
    else
       messagedlg('Usuario disponible!!',mtinformation,[mbok],0);
    form3.ADOUSUARIO.Close;
    end
else
   messagedlg('Ingrese un usuario!!',mtinformation,[mbok],0);
{if form4.Caption = 'Clientes' then
